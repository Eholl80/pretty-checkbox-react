{
    "name": "pretty-checkbox-react",
    "version": "2.0.0-dev.1",
    "description": "Quickly integrate pretty checkbox Components (checkbox, switch, radio) with React",
    "keywords": [
        "Pretty",
        "Radio",
        "Switch",
        "Pretty Checkbox",
        "pretty-checkbox",
        "Components",
        "React",
        "React.js",
        "React 16",
        "WebComponents",
        "CSS",
        "Checkbox"
    ],
    "@pika/pack": {
        "pipeline": [
            [
                "@pika/plugin-standard-pkg",
                {
                    "exclude": [
                        "**/*.mdx",
                        "__tests__/**/*"
                    ]
                }
            ],
            [
                "@pika/plugin-build-web"
            ],
            [
                "@pika/plugin-build-umd",
                {
                    "name": "PrettyCheckboxReact"
                }
            ]
        ]
    },
    "scripts": {
        "build:flow": "flow focus-check src/components/** && flow-copy-source src dist",
        "lint": "eslint src/**",
        "pretest": "eslint src/**",
        "build": "rimraf pkg/** && pack build && npm run build:flow",
        "test": "jest"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/atomicpages/pretty-checkbox-react.git"
    },
    "author": "Dennis Thompson <atomicpages@gmail.com>",
    "maintainers": [
        "Dennis Thompson <atomicpages@gmail.com>"
    ],
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/atomicpages/pretty-checkbox-react/issues"
    },
    "homepage": "https://github.com/atomicpages/pretty-checkbox-react#readme",
    "peerDependencies": {
        "pretty-checkbox": "^3.0.3",
        "react": "^16.8.6",
        "react-dom": "^16.8.6"
    },
    "devDependencies": {
        "@babel/core": "^7.5.0",
        "@babel/plugin-proposal-class-properties": "^7.5.0",
        "@babel/plugin-proposal-object-rest-spread": "^7.5.1",
        "@babel/plugin-transform-computed-properties": "^7.2.0",
        "@babel/preset-env": "^7.5.0",
        "@babel/preset-flow": "^7.0.0",
        "@babel/preset-react": "^7.0.0",
        "@djthoms/eslint-config": "^1.0.0",
        "@djthoms/prettier-config": "^1.0.0",
        "@pika/pack": "^0.4.0",
        "@pika/plugin-build-umd": "^0.4.0",
        "@pika/plugin-build-web": "^0.4.0",
        "@pika/plugin-standard-pkg": "^0.4.0",
        "@testing-library/react": "^8.0.1",
        "babel-core": "^7.0.0-bridge.0",
        "babel-eslint": "^10.0.2",
        "babel-jest": "^24.8.0",
        "coveralls": "^3.0.4",
        "eslint": "^5.16.0",
        "flow": "^0.2.3",
        "flow-bin": "^0.102.0",
        "flow-copy-source": "^2.0.7",
        "flow-coverage-report": "^0.6.1",
        "husky": "^3.0.0",
        "jest": "^24.5.0",
        "jest-dom": "^3.5.0",
        "prettier": "^1.18.2",
        "pretty-checkbox": "^3.0.3",
        "react": "^16.8.5",
        "react-dom": "^16.8.6",
        "rimraf": "^2.6.3"
    },
    "dependencies": {
        "classnames": "^2.2.6"
    },
    "jest": {
        "collectCoverage": true,
        "coverageDirectory": "<rootDir>/coverage",
        "testPathIgnorePatterns": [
            "/node_modules/",
            "<rootDir>/docs/.cache"
        ],
        "coverageReporters": [
            "json",
            "lcov",
            "text",
            "clover",
            "html"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 90,
                "functions": 95,
                "lines": 90,
                "statements": 90
            }
        }
    }
}
