{
    "name": "pretty-checkbox-react",
    "version": "1.1.0",
    "description": "Quickly integrate pretty checkbox Components (checkbox, switch, radio) with React",
    "keywords": [
        "Pretty",
        "Radio",
        "Switch",
        "Pretty Checkbox",
        "pretty-checkbox",
        "Components",
        "React",
        "React.js",
        "React 16",
        "WebComponents",
        "CSS",
        "Checkbox"
    ],
    "main": "dist/pretty-checkbox-react.cjs.js",
    "module": "dist/pretty-checkbox-react.es.js",
    "browser": "dist/pretty-checkbox-react.umd.min.js",
    "scripts": {
        "build:flow": "flow focus-check src/components/** && flow-copy-source src dist",
        "lint": "eslint src/**",
        "pretest": "eslint src/**",
        "build": "rimraf dist/** && rollup -c rollup.config.js && npm run build:flow",
        "prepublish": "flow-copy-source src dist && rollup -c rollup.config.js",
        "test": "jest --silent"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm t",
            "pre-push": "npm t"
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/atomicpages/pretty-checkbox-react.git"
    },
    "author": "Dennis Thompson <atomicpages@gmail.com>",
    "maintainers": [
        "Dennis Thompson <atomicpages@gmail.com>"
    ],
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/atomicpages/pretty-checkbox-react/issues"
    },
    "homepage": "https://github.com/atomicpages/pretty-checkbox-react#readme",
    "peerDependencies": {
        "pretty-checkbox": "^3.0.3",
        "react": "^16.8.0"
    },
    "devDependencies": {
        "@babel/core": "^7.9.6",
        "@babel/plugin-proposal-class-properties": "^7.8.3",
        "@babel/plugin-proposal-object-rest-spread": "^7.9.6",
        "@babel/preset-env": "^7.9.6",
        "@babel/preset-flow": "^7.9.0",
        "@babel/preset-react": "^7.9.4",
        "@rollup/plugin-babel": "^5.0.2",
        "@rollup/plugin-commonjs": "^12.0.0",
        "@rollup/plugin-json": "^4.0.3",
        "@rollup/plugin-node-resolve": "^8.0.0",
        "@testing-library/jest-dom": "^5.8.0",
        "@testing-library/react": "^10.0.4",
        "babel-core": "^7.0.0-bridge.0",
        "babel-eslint": "^10.1.0",
        "babel-jest": "^26.0.1",
        "coveralls": "^3.1.0",
        "eslint": "^7.1.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-flowtype": "^5.1.0",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-prettier": "^3.1.3",
        "eslint-plugin-react": "^7.20.0",
        "flow": "^0.2.3",
        "flow-bin": "^0.125.1",
        "flow-copy-source": "^2.0.9",
        "flow-coverage-report": "^0.7.0",
        "husky": "^4.2.5",
        "jest": "^26.0.1",
        "jest-dom": "^4.0.0",
        "prettier": "^2.0.5",
        "pretty-checkbox": "^3.0.3",
        "react": "^16.13.1",
        "react-docgen": "^5.3.0",
        "react-dom": "^16.13.1",
        "rimraf": "^3.0.2",
        "rollup": "^2.10.8",
        "rollup-plugin-uglify": "^6.0.4"
    },
    "dependencies": {
        "classnames": "^2.2.6",
        "hoist-non-react-statics": "^3.3.2"
    },
    "jest": {
        "collectCoverage": true,
        "coverageDirectory": "<rootDir>/coverage",
        "testPathIgnorePatterns": [
            "/node_modules/",
            "<rootDir>/docs/",
            "<rootDir>/pkg/"
        ],
        "coverageReporters": [
            "json",
            "lcov",
            "text",
            "clover",
            "html"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 90,
                "functions": 95,
                "lines": 90,
                "statements": 90
            }
        }
    }
}
