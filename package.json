{
    "name": "pretty-checkbox-react",
    "version": "2.0.0-beta.1",
    "description": "A set of React components build around Pretty Checkbox",
    "keywords": [
        "Pretty",
        "Radio",
        "Switch",
        "Pretty Checkbox",
        "Pretty Checkbox React",
        "pretty-checkbox",
        "pretty-checkbox-react",
        "Components",
        "input controls",
        "React",
        "React Hooks",
        "CSS",
        "Checkbox"
    ],
    "scripts": {
        "lint": "eslint \"src/**/*.{ts,tsx}\"",
        "test": "jest --silent",
        "clean": "rimraf pkg/**",
        "build": "pika build",
        "build:test": "npm run clean && tsc src/index.ts --pretty --jsx react --esModuleInterop  --downLevelIteration --outDir pkg"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/atomicpages/pretty-checkbox-react.git"
    },
    "author": "Dennis Thompson",
    "maintainers": [
        "Dennis Thompson"
    ],
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/atomicpages/pretty-checkbox-react/issues"
    },
    "homepage": "https://github.com/atomicpages/pretty-checkbox-react#readme",
    "@pika/pack": {
        "pipeline": [
            [
                "@pika/plugin-ts-standard-pkg",
                {
                    "excludes": "playground/**"
                }
            ],
            [
                "@pika/plugin-build-web"
            ],
            [
                "@pika/plugin-build-node"
            ],
            [
                "pika-plugin-legacy-browser",
                {
                    "name": "PrettyCheckboxReact",
                    "minify": true,
                    "external": [
                        "react"
                    ],
                    "globals": {
                        "react": "React"
                    },
                    "sourcemap": true
                }
            ]
        ]
    },
    "peerDependencies": {
        "pretty-checkbox": "^3.0.3",
        "react": ">=16.8.0"
    },
    "devDependencies": {
        "@djthoms/eslint-config": "^2.0.1",
        "@djthoms/prettier-config": "^1.0.0",
        "@pika/pack": "^0.5.0",
        "@pika/plugin-build-node": "^0.7.1",
        "@pika/plugin-build-web": "^0.7.1",
        "@pika/plugin-ts-standard-pkg": "^0.7.1",
        "@testing-library/jest-dom": "^4.2.3",
        "@testing-library/react": "^9.3.1",
        "@testing-library/react-hooks": "^3.1.1",
        "@types/classnames": "^2.2.9",
        "@types/jest": "^24.0.21",
        "@types/react": "^16.9.11",
        "babel-jest": "^24.9.0",
        "coveralls": "^3.0.7",
        "eslint": "^6.6.0",
        "husky": "^3.0.9",
        "jest": "^24.9.0",
        "jest-dom": "^4.0.0",
        "pika-plugin-legacy-browser": "^1.1.1",
        "prettier": "^1.18.2",
        "pretty-checkbox": "^3.0.3",
        "react": "^16.11.0",
        "react-docgen": "^4.1.0",
        "react-dom": "^16.11.0",
        "react-test-renderer": "^16.11.0",
        "rimraf": "^3.0.0",
        "ts-jest": "^24.1.0",
        "typescript": "^3.6.4"
    },
    "dependencies": {
        "classnames": "^2.2.6",
        "hoist-non-react-statics": "^3.3.0"
    }
}
