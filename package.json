{
    "name": "pretty-checkbox-react",
    "version": "2.0.0-rc.1",
    "description": "A set of React components build around Pretty Checkbox",
    "keywords": [
        "Pretty",
        "Radio",
        "Switch",
        "Pretty Checkbox",
        "Pretty Checkbox React",
        "pretty-checkbox",
        "pretty-checkbox-react",
        "Components",
        "input controls",
        "React",
        "React Hooks",
        "CSS",
        "Checkbox"
    ],
    "scripts": {
        "lint": "eslint \"src/**/*.{ts,tsx}\"",
        "test": "jest --silent",
        "clean": "rimraf pkg/**",
        "build": "npm-run-all --parallel ts-check lint clean test && pika build",
        "ts-check": "tsc --noEmit",
        "version": "npm run build"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/atomicpages/pretty-checkbox-react.git"
    },
    "author": "Dennis Thompson",
    "maintainers": [
        "Dennis Thompson"
    ],
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/atomicpages/pretty-checkbox-react/issues"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm test",
            "pre-push": "npm run version"
        }
    },
    "homepage": "https://github.com/atomicpages/pretty-checkbox-react#readme",
    "@pika/pack": {
        "pipeline": [
            [
                "@pika/plugin-ts-standard-pkg",
                {
                    "excludes": "playground/**"
                }
            ],
            [
                "@pika/plugin-build-web"
            ],
            [
                "@pika/plugin-build-node"
            ],
            [
                "pika-plugin-legacy-browser",
                {
                    "name": "PrettyCheckboxReact",
                    "format": "umd",
                    "minify": true,
                    "external": [
                        "react"
                    ],
                    "globals": {
                        "react": "React"
                    },
                    "sourcemap": true
                }
            ],
            [
                "pika-plugin-typedefs-to-flow"
            ]
        ]
    },
    "peerDependencies": {
        "pretty-checkbox": "^3.0.0",
        "react": ">=16.8.0",
        "react-dom": ">=16.8.0"
    },
    "devDependencies": {
        "@cypress/webpack-preprocessor": "^4.1.2",
        "@djthoms/eslint-config": "^2.0.1",
        "@djthoms/prettier-config": "^1.0.0",
        "@pika/pack": "^0.5.0",
        "@pika/plugin-build-node": "^0.9.2",
        "@pika/plugin-build-web": "^0.9.2",
        "@pika/plugin-ts-standard-pkg": "^0.9.2",
        "@testing-library/cypress": "^5.3.0",
        "@testing-library/jest-dom": "^5.1.1",
        "@testing-library/react": "^9.4.0",
        "@testing-library/react-hooks": "^3.2.1",
        "@types/classnames": "^2.2.9",
        "@types/jest": "^25.1.2",
        "@types/nanoid": "^2.1.0",
        "@types/node": "^13.7.4",
        "@types/react": "^16.9.19",
        "@types/testing-library__cypress": "^5.0.3",
        "coveralls": "^3.0.9",
        "cypress": "^4.0.2",
        "eslint": "^6.8.0",
        "eslint-plugin-cypress": "^2.10.3",
        "flowgen": "^1.10.0",
        "husky": "^4.2.3",
        "jest": "^25.1.0",
        "npm-run-all": "^4.1.5",
        "pika-plugin-legacy-browser": "^1.2.0",
        "pika-plugin-typedefs-to-flow": "0.0.2",
        "prettier": "^1.19.1",
        "pretty-checkbox": "^3.0.3",
        "react": "^16.12.0",
        "react-docgen-typescript": "^1.16.2",
        "react-dom": "^16.12.0",
        "react-test-renderer": "^16.12.0",
        "react-ts-docgen": "^1.0.1",
        "rimraf": "^3.0.2",
        "ts-jest": "^25.2.0",
        "typescript": "^3.8.2"
    },
    "dependencies": {
        "classnames": "^2.0.0",
        "nanoid": "^2.0.0"
    },
    "prettier": "@djthoms/prettier-config"
}
